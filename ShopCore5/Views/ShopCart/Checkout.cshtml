@model IEnumerable<ShopCartItem>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ваша корзина</span>
                    <span class="badge badge-secondary badge-pill">@Model.Count()</span>
                </h4>
                <ul class="list-group mb-3">
                    @{
                        var fullCost = 0.0;
                        foreach (var product in Model)
                        {
                            fullCost += product.Furnitures.Cost;
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">@product.Furnitures.ProductName</h6>
                                    <small class="text-muted">@product.Furnitures.ShortDescription</small>
                                </div>
                                <span class="text-muted">@product.Furnitures.Cost.ToString("C")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Всего</span>
                            <strong>@fullCost</strong>
                        </li>
                    }
                </ul>
            </div>

            <div class="col-md-8 order-md-1">
                <form class="needs-validation" novalidate="" >

                    <h4 class="mb-3">Оплата</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                            <label class="custom-control-label" for="credit">МИР</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required="">
                            <label class="custom-control-label" for="debit">Visa</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required="">
                            <label class="custom-control-label" for="paypal">Master Card</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-name">Имя на карточке</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                            <small class="text-muted">Введите имя как указано на карточке</small>
                            <div class="invalid-feedback" wfd-invisible="true">
                                Поле необходимо заполнить!
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-number">Номер карточки</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="" required="">
                            <div class="invalid-feedback" wfd-invisible="true">
                                Поле необходимо заполнить!
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">Срок действия</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                            <div class="invalid-feedback" wfd-invisible="true">
                                Поле необходимо заполнить!
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                            <div class="invalid-feedback" wfd-invisible="true">
                                Поле необходимо заполнить!
                            </div>
                        </div>
                    </div>

                    <h4 class="mb-3">Способ доствки</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="Self" name="paymentMethod" type="radio" class="custom-control-input" checked="" required="">
                            <label class="custom-control-label" for="Self">Самовывоз</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="Sdek" name="paymentMethod" type="radio" class="custom-control-input" required="">
                            <label class="custom-control-label" for="Sdek">Сдэк</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="Line" name="paymentMethod" type="radio" class="custom-control-input" required="">
                            <label class="custom-control-label" for="Line">Деловые линии</label>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <a asp-controller="ShopCart" asp-action="Success" class="btn btn-warning btn-lg btn-block" type="submit">Оплатить</a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous" wfd-invisible="true"></script>
    <script wfd-invisible="true">window.jQuery || document.write('<script src="/docs/4.5/assets/js/vendor/jquery.slim.min.js"><\/script>')</script>
    <script src="/docs/4.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous" wfd-invisible="true"></script>
    <script src="form-validation.js" wfd-invisible="true"></script>
