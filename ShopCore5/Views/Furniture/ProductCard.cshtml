@model Furniture
@{ ViewData["Title"] = "Каталог"; }
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="@Model.Img" class="img-fluid" float="left"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">@Model.ProductName</h4>
                    <p class="card-text" style="font-size:20px">@Model.LongDescription</p>
                    <h2 class="mt-5">
                        Цена: @Model.Cost.ToString("C")
                    </h2>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id=@Model.Id>Добавить в корзину</a>
                    </div>
                    <h3 class="box-title mt-5">Характеристики</h3>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-check text-dark"></i>Размер: @Model.Size</li>
                        <li><i class="fa fa-check text-dark"></i>Вес: @Model.Weight кг</li>
                        <li><i class="fa fa-check text-dark"></i>Количество на складе: @Model.Quantity шт</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
