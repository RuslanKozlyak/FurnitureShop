@{ ViewData["Title"] = "Вход"; }
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-3 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-antiforgery="true" asp-controller="Account" asp-action="SignIn" method="post">

                        <h3 class="fw-normal mb-2 pb-2" style="letter-spacing: 1px;">Вход</h3>

                        <div class="form-outline mb-4">
                            <input name="email" type="email" id="form2Example18" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Почта</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input name="password" type="password" id="form2Example28" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Пароль</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <input type="submit" class="btn btn-warning btn-lg btn-block" value="Войти" />
                        </div>

                        <p>Ещё не имеете аккаунта? <a href="#!" class="link-info">Зарегистрируйтесь!</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/img/BG.jpg" alt="Login image" class="w-100 vh-80" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>