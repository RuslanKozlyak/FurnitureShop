@model IEnumerable<Order>
@{
    ViewData["Title"] = "Заказы"; 
}

<div class="container py-1">
    <div class="row text-center text-dark mb-1">
        <div class="col-lg-7 mx-auto">
            <h1 class="display-4">Список ваших заказов</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <ul class="list-group shadow">
                @{ foreach (var product in Model)
                                {
                    <li class="list-group-item pb-1 mb-1">
                        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                            <div class="media-body order-2 order-lg-1">
                                                <a class="text-dark" asp-controller="ShopCart" asp-action="GetOrderDetails" asp-route-id=@product.Id>
                                                    <h5 class="mt-0 font-weight-bold mb-2">Номер заказа @product.Id Время заказа @product.OrderTime Общая стоимость @product.FullCost.ToString("C")</h5>
                                                </a>
                                            </div>
                        </div>
                    </li>
 } }
            </ul>
        </div>
    </div>
</div>
