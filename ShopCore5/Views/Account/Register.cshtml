@model Human
@{ ViewData["Title"] = "Регистрация"; }
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-3 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-antiforgery="true" asp-controller="Account" asp-action="Register" method="post">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <h3 class="fw-normal mb-2 pb-2" style="letter-spacing: 1px;">Регистрация</h3>

                        <div class="form-outline mb-4">
                            <input asp-for="FirstName" type="text" class="form-control form-control-lg" />
                            <label class="form-label">Имя</label>
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="LastName" type="text" class="form-control form-control-lg" />
                            <label class="form-label">Фамилия</label>
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="MiddleName" type="text" class="form-control form-control-lg" />
                            <label class="form-label">Отчество</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Adress" type="text" class="form-control form-control-lg" />
                            <label class="form-label">Адрес</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Phone" type="number" class="form-control form-control-lg" />
                            <label class="form-label">Телефон</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" class="form-control form-control-lg" />
                            <label class="form-label">Почта</label>
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Пароль</label>
                            <span asp-validation-for="FirstName"></span>
                        </div>

                        <div class="pt-1 mb-4">
                            <input type="submit" value="Зарегистрироваться" class="btn btn-warning btn-lg btn-block" />
                        </div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="/img/BG.jpg" alt="Login image" class="w-100 vh-80" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}